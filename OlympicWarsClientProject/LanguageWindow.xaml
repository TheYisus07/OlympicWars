<Window x:Class="OlympicWarsClientProject.LanguageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OlympicWarsClientProject"
        mc:Ignorable="d"
        xmlns:languege="clr-namespace:OlympicWarsClientProject.Properties.Langs"
        Title="LanguageWindow" Height="321.572" Width="408.027">
    <Grid >
        <ComboBox Name="comboBoxLanguege" SelectionChanged="comboBoxLanguege_SelectionChanged"  HorizontalAlignment="Left" Margin="144,162,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="{x:Static languege:Lang.en}"/>
            <ComboBoxItem Content="{x:Static languege:Lang.es}"/>
        </ComboBox>
        <Button Content="{x:Static languege:Lang.login}" HorizontalAlignment="Left" Margin="161,103,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" ></Button>
        <TextBox x:Name="textBoxName" HorizontalAlignment="Left" Height="23" Margin="144,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
    </Grid>
</Window>
