                <Image x:Name="imagePlayer" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
        <Border x:Name="borderRoomGame" CornerRadius="20" Opacity="0.9" Background="Black" Margin="336,33,0,0" Visibility="Hidden">
