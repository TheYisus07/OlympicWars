                        <Label Content="Search player: " FontWeight="Bold" Margin="10,10,272,47"/>
                        <TextBox x:Name="textBoxSearch" Margin="107,0,10,47"/>
                        <Button x:Name="buttonSearchPlayer" Content="search" Margin="10,48,10,0" Click="Button_Search_Player_Click" Height="Auto"/>
                    </Grid>
